<!DOCTYPE html>
<html lang="en">
<head>
    {% include 'template'  ~ constant('DIRECTORY_SEPARATOR') ~ 'header.html.twig' %}
    <title>Add Blog Details</title>
</head>
<body>
    {% include 'template'  ~ constant('DIRECTORY_SEPARATOR') ~ 'navigation.html.twig' %}
    <div class="container">
        <div class="alert alert-primary" role="alert" id="msg" {% if message is empty %} style="display:none" {% endif %}> 
           {{ message|default('') }}
        </div>
        {% if success %}
            <div class="alert alert-success">New blog item added successfully</div>
        {% endif %}
        <form class="row g-3" action="?action=addBlog" method="POST">
            <div class="col-12">
                <div class="card mt-2 mb-3">
                    <div class="card-header"> Add Blog</div>
                    <div class="card-body">
                        <div class="form-group">
                            <div class="row">
                                <label for="b_title">title</label>
                                <input type="text"  class="form-control" name="b_title" id="b_title" required>

                                <label for="b_body">body</label>
                                <input type="textarea"  class="form-control" name="b_body" id="b_body" required>
                            </div>
                            <div class="row">
                                <label for="b_type">type</label>
                                <select name="b_type" class="form-control">
                                    {% for type in types %}
                                        <option value="{{ type }}">{{ type }}</option>
                                    {% endfor %}
                                </select>

                                <label for="b_author">author</label>
                                <input type="text"  class="form-control" name="b_author" id="b_author" required>

                                <label for="b_image_id">image</label>
                                <select name="b_image_id" class="form-control">
                                    {% for image in images %}
                                        <option value="{{ image.i_id }}">{{ image.i_filename }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="row">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="b_is_active" value="1" class="form-check-input">
                                    <label class="form-check-label" for="defaultCheck1"> is active </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <input type="submit" value="Add blog" name="submit" class="btn btn-success submit float right" id="submit">     
            </div>
        </form>
    </div>  
</body>
{% include 'template'  ~ constant('DIRECTORY_SEPARATOR') ~ 'footer.html.twig' %}
</html>